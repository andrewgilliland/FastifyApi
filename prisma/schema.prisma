generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

type WorkoutsExercises {
  id   Int
  sets WorkoutsExercisesSets[]
}

type WorkoutsExercisesSets {
  duration    Int?
  repetitions Int?
}

model exercises {
  id                String   @id @default(auto()) @map("_id") @db.ObjectId
  difficulty        String
  equipment         String
  exerciseType      String
  forceType         String
  mechanics         String
  name              String
  secondaryMuscles  String[]
  targetMuscleGroup String
}

model programs {
  id String @id @default(auto()) @map("_id") @db.ObjectId
}

model workouts {
  id          String              @id @default(auto()) @map("_id") @db.ObjectId
  description String
  difficulty  String
  exercises   WorkoutsExercises[]
  name        String
}
